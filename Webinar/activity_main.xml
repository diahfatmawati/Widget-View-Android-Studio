<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a7c1e2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aladin"
        android:text="@string/nama_lengkap_beserta_gelar"
        android:textColor="#180d58"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/JenisKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/aladin"
        android:text="@string/jenis_kelamin"
        android:textColor="#180d58"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNama" />

    <TextView
        android:id="@+id/Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aladin"
        android:text="@string/status_pendidikan"
        android:textColor="#180d58"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgJenisKelamin" />

    <TextView
        android:id="@+id/SosialMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/aladin"
        android:text="@string/mendapat_informasi_webinar_dari"
        android:textColor="#180d58"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status" />

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/aladin"
        android:text="@string/line_aktif"
        android:textColor="#180d58"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SosialMedia" />

    <TextView
        android:id="@+id/WA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aladin"
        android:text="@string/no_telp_whatsapp"
        android:textColor="#180d58"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <EditText
        android:id="@+id/editNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="65dp"
        android:autofillHints=""
        android:ems="12"
        android:fontFamily="@font/adamina"
        android:inputType="textPersonName"
        android:labelFor="@id/editNama"
        android:textColor="#180d58"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="175dp"
        android:autofillHints=""
        android:ems="8"
        android:fontFamily="@font/adamina"
        android:inputType="textPersonName"
        android:labelFor="@id/editLine"
        android:textColor="#180d58"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editWA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="175dp"
        android:autofillHints=""
        android:ems="8"
        android:fontFamily="@font/adamina"
        android:inputType="textPersonName"
        android:labelFor="@id/editWA"
        android:textColor="#180d58"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/JenisKelamin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:id="@+id/rgJenisKelamin">

        <RadioButton
            android:id="@+id/rbLaki"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/laki_laki"
            android:textColor="#180d58"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rbPerempuan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/perempuan"
            android:textColor="#180d58"
            android:textSize="15sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Status"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:id="@+id/rgStatus">

        <RadioButton
            android:id="@+id/rbMahasiswa"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/mahasiswa"
            android:textColor="#180d58"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rbDosen"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/dosen"
            android:textColor="#180d58"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rbUmum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/amaranth"
            android:text="@string/umum"
            android:textColor="#180d58"
            android:textSize="15sp" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/cbInstagram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/amaranth"
        android:text="@string/instagram"
        android:textColor="#180d58"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SosialMedia" />

    <CheckBox
        android:id="@+id/cbTwitter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/amaranth"
        android:text="@string/twitter"
        android:textColor="#180d58"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SosialMedia" />

    <CheckBox
        android:id="@+id/cbWhatsApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/amaranth"
        android:text="@string/whatsapp"
        android:textColor="#180d58"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SosialMedia" />

    <CheckBox
        android:id="@+id/cbLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/amaranth"
        android:text="@string/line"
        android:textColor="#180d58"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SosialMedia" />

    <ImageButton
        android:id="@+id/imgButtonYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WA"
        app:srcCompat="@drawable/buttonyes" />

    <ImageButton
        android:id="@+id/imgButtonNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WA"
        app:srcCompat="@drawable/buttondont" />

</androidx.constraintlayout.widget.ConstraintLayout>